<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.css" rel="stylesheet">
	<link href="/css/hci-friends.css" rel="stylesheet">
  
</head>

<body>
	<div class="container friend-area">
		<h1>My HCI Friends</h1>

		<div class="row">
			{{#each friends}}
			<div class="friend thumbnail col-md-6">
				<img class="img-responsive img-rounded" src="{{imageURL}}">
				<h3><a href="#">{{name}}</a></h3>
				<p> {{description}}</p>
			</div>
			{{/each}}
		</div>


		<form id="addFriendForm" role="form" method="get" action="/add">
			<h3>Add a friend</h3>
		    <div class="form-group">
		      <label for="name">Name:</label>
		      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
		    </div>
		    <div class="form-group">
		      <label for="description">Description:</label>
		      <input type="text" class="form-control" id="description" placeholder="Description" name="description">
		    </div>
		    <input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
		</form>
	</div>
	
	<hr>
	
	<div class="container newsfeed">	
		<h1>Newsfeed</h1>

		<div class="thumbnail newsfeed">
		{{#each posts}}
		<div class="status">
			<p><a href="#">{{name}}</a>: {{post}} </p>
		</div>
		{{/each}}
		</div>

		<form id="postForm" role="form" method="get" action="/post">
			<h3>Say something</h3>
		    <div class="form-group">
		      <label for="name">Name:</label>
		      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
		    </div>
		    <div class="form-group">
		      <label for="post">Say something:</label>
		      <input type="text" class="form-control" id="post" placeholder="How are you today?" name="post">
		    </div>
		    <input type="submit" id="submitBtn" class="btn btn-default" value="Post!"></input>
		</form>

	</div>

	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/hci-friends.js"></script>

</body>
</html>
